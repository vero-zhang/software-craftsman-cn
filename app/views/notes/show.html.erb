<div id="notes" class="panel panel-default">
  <div class="panel-heading">
    <%= raw '<span><i class="fa fa-share-alt"></i> 公开</span> ' if @note.publish %>
     •
        共 <%= @note.word_count %> <%= t("notes.chars") %> • 由 <%= user_name_tag(@note.user) %> <%= sanitize t("notes.created_at", time: timeago(@note.created_at)) %> • <%= @note.hits %> <%= t("common.read_times")%> • <%= @note.changes_count %> <%= t("notes.times_edit") %>
        <% if owner? @note %>
        <span class="opts pull-right">
          <%= link_to icon_tag("fa fa-pencil"), edit_note_path(@note),  title: t("common.edit") %>
          <%= link_to icon_tag("fa fa-trash"), note_path(@note), 'data-confirm' => t("common.confirm_delete"), method: :delete, title: t("common.confirm_delete") %>
        </span>
        <% end %>
  </div>

  <div class="panel-body markdown">
    <%= markdown(@note.body) %>
  </div>

  <% if @note.publish %>
  <div class="panel-footer clearfix">
  <label><%= t("notes.page_link")%></label>
  <%= note_url(@note) %>
  </div>
  <% end %>
</div>


