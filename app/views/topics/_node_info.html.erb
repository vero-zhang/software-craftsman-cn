<% if !node.blank? %>
  <div class="node-info">
    <div class="name">
      <strong><%= node.name %></strong> <span class="total">共有 <%= render_node_topics_count(node) %> 个讨论主题</span>
      <div class="pull-right">
        <%= block_node_tag(node) %>
      </div>
    </div>
    <div class="summary">
      <%= sanitize_markdown node.summary_html %>
    </div>
  </div>

<% else %>
  <div class="filter pull-right">
    <span class="l">查看:</span>
    <a href="<%= topics_path %>"<%= " class=active" if action_name == "index" %>>默认</a> /
    <a href="<%= popular_topics_path %>" class="popular<%= " active" if action_name == "popular"  %>"><i class="fa fa-diamond"></i> 优质帖子</a> /
    <a href="<%= no_reply_topics_path %>" <%= " class=active" if action_name == "no_reply"  %>>无人问津</a> /
    <a href="<%= recent_topics_path %>" <%= " class=active" if action_name == "recent"  %>>最新创建</a>
  </div>
<% end %>
