<!DOCTYPE html>
<html>
<head>
  <title>RubyChina - Control Panel</title>
  <link rel="shortcut icon" href="<%= asset_path("big_logo.png") %>" />
  <%= stylesheet_link_tag "cpanel" %>
  <%= javascript_include_tag "app" %>
  <%= csrf_meta_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
</head>
<body>
 <div class="header">
    <nav class="navbar navbar-inverse navbar-static-top navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <i class="fa fa-reorder"></i>
          </button>
          <%= link_to("控制台", cpanel_root_path, class: "navbar-brand") %>
        </div>
        <nav class="navbar-collapse bs-navbar-collapse collapse">
          <%= render_list class: "nav navbar-nav" do |li|
            li << link_to(t("cpanel.menu.root_path"), cpanel_root_path)
            li << link_to(t("cpanel.menu.site_configs"), cpanel_site_configs_path )
            li << link_to(t("cpanel.menu.users"),cpanel_users_path)
            li << link_to(t("cpanel.menu.sections"), cpanel_sections_path )
            li << link_to(t("cpanel.menu.nodes"), cpanel_nodes_path )
            li << link_to(t("cpanel.menu.wiki"),cpanel_pages_path )
            li << link_to(t("cpanel.menu.topics"), cpanel_topics_path)
            li << link_to(t("cpanel.menu.replies"), cpanel_replies_path)
            li << link_to(t("cpanel.menu.comments"),cpanel_comments_path )
            li << link_to(t("cpanel.menu.photos"),cpanel_photos_path )
            li << link_to(t("cpanel.menu.site_nodes"),cpanel_site_nodes_path )
            li << link_to(t("cpanel.menu.sites"),cpanel_sites_path )
            li << link_to(t("cpanel.menu.locations"),cpanel_locations_path )
            li << link_to(t("cpanel.menu.exception_logs"),cpanel_exception_logs_path )
          end  %>
          
          <%= render "common/user_nav" %>
        </div>
      </div>
    </div>
  </div>


  <div class="main-container container">
    <div class="breadcrumb">
      <a href="<%= cpanel_root_path %>">Root</a> &gt;
      <%= yield :sitemap %>
    </div>
    <div id="main" class="panel panel-default">
      <div class="panel-body">
        <%= notice_message %>
        <%= yield %>
      </div>
    </div>
  </div>

  <footer class="footer">
    <div class="container">
      <p class="suggest">使用 <a href="http://www.mozillaonline.com/" target="_blank" rel="nofollow">Firefox</a> 或 <a href="http://www.google.com/chrome" target="_blank" rel="nofollow">Chrome</a> 浏览访问本站将会获得更佳的视觉体验.</p>
    </div>
  </footer>
</body>
</html>
